<table class="table">
  <thead>
    <caption>All books</caption>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Year</th>
      <th>Pages</th>
      <th>List price</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td> <%= link_to "#{b.title}", book_path(b.id) %>
        <td> <%= b.publisher %> </td>
        <td> <%= b.year %> </td>
        <td> <%= b.pages %> </td>
        <td> <%= b.list_price %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
